@page "/"
<PageTitle>Moogle!</PageTitle>

<h1>🔍 Moogle!</h1>

@*<input class="p-1 my-4" @bind="query" placeholder="Introduzca su búsqueda" @onkeyup="PressEnter">

    <button type="default" class="btn btn-primary" @onclick="RunQuery">🔍 Buscar</button>*@

<form @onsubmit="RunQuery">
    <input class="p-1 my-4" @bind="query" placeholder="Introduzca su búsqueda">
    <input type="submit" class="btn btn-primary" value="🔍 Buscar">
</form>


@if (!string.IsNullOrEmpty(result.Suggestion))
{
    <div class="suggestion">
        <p>¿Quisite decir <strong><a href="#" @onclick="SuggestQuery">@result.Suggestion</a></strong>?</p>
    </div>
}

<ul class="results">
    @if (!SearchMethod.first_search && result.Items().Count() == 0)
    {
        <div class="item">
            <h2><b>No results obtained</b></h2>
        </div>
    }
    @foreach (var item in result.Items())
    {
        <li>
            <div class="item">
                <p class="title"><a target='__blank' style="color: blue; text-decoration: none;"
                    href=@(item.Title+"/"+0)>@item.Title</a></p>
                <p>... @item.Snippet ...</p>
            </div>
        </li>
    }
</ul>
@code {
    int count = 0;
    int index = 0;
    public string query = "";
    private SearchResult result = new SearchResult();
    public void Test()
    {
        System.Diagnostics.Process p = new System.Diagnostics.Process();
        p.StartInfo.UseShellExecute = true;
        //string path = TF_IDF.filesPath[SearchMethod.fileNames.ToList().IndexOf(id)];
        //p.StartInfo.FileName = path;
        p.Start();
    }
    public void SuggestQuery()
    {
        query = result.Suggestion;
        RunQuery();
    }
    private void PressEnter(KeyboardEventArgs e)
    {
        if (e.Code == "Enter")
        {
            RunQuery();
        }
    }
    private void RunQuery()
    {
        if (SearchMethod.first_search)
        {
            SearchMethod.thread_start.Join();
            SearchMethod.first_search = false;
        }
        result = Moogle.Query(query);
    }
}